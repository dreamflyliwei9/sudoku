/* pages/about/about.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20px;
  box-sizing: border-box;
  position: relative;
}

.back-btn {
  position: absolute;
  left: 20px;
  top: 0;
  font-size: 14px;
  color: #333;
  padding: 8px 15px;
  border-radius: 4px;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40px;
  padding-bottom: 15px;
}

.logo {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 2px;
}

.version {
  font-size: 12px;
  color: #999;
  line-height: 1;
}

.content {
  width: 100%;
}

.section {
  margin-bottom: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 12px;
  color: #07c160;
  border-left: 4px solid #07c160;
  padding-left: 10px;
}

.section-content {
  padding: 0 15px;
}

.feature, .instruction {
  margin-bottom: 8px;
  font-size: 14px;
  color: #333;
  line-height: 1.6;
}