.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  padding-top: 10px;
  padding-bottom: 30px;
  box-sizing: border-box;
  overflow-y: auto;
}

.control-area {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  padding: 0 40px;
  box-sizing: border-box;
  position: fixed;
  bottom: 40px;
  left: 0;
}

.control-btn {
  min-width: 45%;
  font-size: 18px;
  border-radius: 24px;
  padding: 12px 0;
  line-height: 1.2;
  height: auto;
}

.control-btn.primary {
  background-color: #07c160;
  color: white;
  font-weight: bold;
}

.tips {
  margin: 15px 0;
  color: #333;
  font-size: 14px;
  text-align: center;
  background-color: rgba(255, 248, 220, 0.8);
  padding: 8px 15px;
  border-radius: 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.processing {
  margin-top: 20px;
  color: #07c160;
  font-size: 16px;
  text-align: center;
  font-weight: bold;
}

.camera-container {
  width: 100%;
  height: 75vh;
  position: relative;
  overflow: hidden;
  background-color: #000;
}

.camera {
  width: 100%;
  height: 100%;
}

.camera-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.focus-area {
  width: 80%;
  height: 80%;
  border: 2px solid rgba(255, 255, 255, 0.8);
  border-radius: 8px;
  box-shadow: 0 0 0 2000px rgba(0, 0, 0, 0.3);
}

.image-container {
  width: 100%;
  height: 75vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.sudoku-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.camera-error {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 20;
}

.error-icon {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  background-color: #ff4d4f;
  color: white;
  font-size: 40px;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}

.error-message {
  color: white;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.error-detail {
  color: #f0f0f0;
  font-size: 14px;
}

.footer-buttons {
  position: fixed;
  bottom: 40px;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 0 40px;
  box-sizing: border-box;
  z-index: 100;
}

.footer-btn {
  width: 45%;
  height: auto;
  padding: 12px 0;
  border-radius: 30px;
  font-size: 18px;
  line-height: 1.4;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.footer-btn.primary {
  background-color: #07c160;
  color: white;
  font-weight: bold;
}

.footer-btn.wide {
  width: 80%;
} 